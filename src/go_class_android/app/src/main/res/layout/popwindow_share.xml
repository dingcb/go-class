<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="102dp"
        android:background="@drawable/share_popup">

        <TextView
            android:id="@+id/share_pop_whiteboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/huaban"
            android:gravity="center"
            android:text="@string/room_controller_whiteboard"
            android:textColor="@color/text_black2"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/share_pop_file"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/share_pop_file"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/wenjian"
            android:gravity="center"
            android:text="@string/room_controller_docs"
            android:textColor="@color/text_black2"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/share_pop_whiteboard"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>