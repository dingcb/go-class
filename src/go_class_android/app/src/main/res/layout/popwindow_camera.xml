<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="190dp"
        android:layout_height="105dp"
        android:background="@drawable/camera_popup">

        <TextView
            android:id="@+id/camera_pop_switch"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/fanzhuan"
            android:gravity="center"
            android:text="@string/room_controller_switch_camera"
            android:textColor="@color/text_black2"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/camera_pop_close"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/camera_pop_close"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/camera_close"
            android:gravity="center"
            android:text="@string/room_turn_off_camera"
            android:textColor="@color/text_black2"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/camera_pop_switch"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>